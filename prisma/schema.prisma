generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Ensure 100% Match with NextAuth.js (Auth.js) requirements
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id                 String         @id @default(cuid())
  name               String?
  email              String?        @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  role               String         @default("CLIENT") // CLIENT, ADMIN, GUIDE, SUPER_ADMIN
  canMessage         Boolean        @default(true)
  conversationStatus String         @default("NONE")
  phone              String?
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  
  accounts           Account[]
  sessions           Session[]
  bookings           Booking[]
  reviews            Review[]
  messages           Message[]
  conversations      Conversation[]
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  images      String   // JSON string or comma-separated URLs
  category    String   // DESERT, MEDINA, FOOD, NATURE, ADVENTURE
  duration    String
  location    String
  latitude    Float?
  longitude   Float?
  languages   String?  // JSON ["en", "fr"]
  maxGuests   Int?
  itinerary   String?  // JSON string
  features    String?  // JSON string
  included    String?  // JSON string
  excluded    String?  // JSON string
  requirements String? // What to bring, etc.
  whatToBring String? // JSON
  tags        String? // JSON
  host        String? // JSON
  
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  reviews     Review[]
  bookings    Booking[]
}

model Booking {
  id              String   @id @default(cuid())
  userId          String
  serviceId       String
  activityTitle   String
  date            DateTime
  guests          Int
  totalPrice      Float
  status          String   @default("PENDING") // PENDING, CONFIRMED, COMPLETED, CANCELLED
  paymentStatus   String   @default("UNPAID")
  
  name            String?  // For guest checkout or snapshot
  email           String?
  phone           String?
  
  pickupLocation  String?
  specialRequests String?
  dietary         String?
  flightNumber    String?
  language        String?
  packageName     String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user            User     @relation(fields: [userId], references: [id])
  service         Service  @relation(fields: [serviceId], references: [id])
  review          Review?
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  
  serviceId String
  userId    String
  bookingId String?   @unique

  service   Service  @relation(fields: [serviceId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  booking   Booking? @relation(fields: [bookingId], references: [id])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  subject   String?
  status    String    @default("OPEN")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  user      User      @relation(fields: [userId], references: [id])
  messages  Message[]
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  userId         String       // Sender
  sender         String
  content        String
  read           Boolean      @default(false)
  createdAt      DateTime     @default(now())

  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  user           User         @relation(fields: [userId], references: [id])
}

model GlobalSettings {
  id             String @id @default("settings")
  siteName       String @default("Marrakech Escapes")
  contactEmail   String @default("contact@marrakechescapes.com")
  homepageHeroVideo String?
  featuredCategories String? // JSON
}

model NewsletterSubscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

model Notification {
  id        String   @id @default(cuid())
  type      String   // BOOKING, COMPLAINT, SYSTEM
  title     String
  message   String
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
  link      String?
}
